<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.jaylim.study.myapplication">

    <uses-feature android:name="android.hardware.camera"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".camera1.CameraOneActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".camera1.TextureCameraActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".camera2.CameraPreviewActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".preview.PreviewActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".capture.CaptureActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
