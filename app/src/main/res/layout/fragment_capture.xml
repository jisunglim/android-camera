<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <io.jaylim.study.myapplication.capture.ResizableTextureView
        android:id="@+id/capture_texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <io.jaylim.study.myapplication.StackBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        custom:maximumTime="15"
        custom:backgroundColor="#7fd7dadb"
        custom:stackColor="#FFFFFF"
        custom:dividerColor="#E8474E"
        custom:barHeight="15dp"
        custom:trashBin="@drawable/camera_trash_bin_button_30dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#7fd7dadb"/>

    <ImageButton
        android:id="@+id/capture_capture_button_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="#00000000"
        android:src="@drawable/capture_capture_button_release_70dp"/>

    <ImageButton
        android:id="@+id/capture_selfie_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:background="#00000000"
        android:src="@drawable/capture_selfie_button_30dp"/>

    <ImageButton
        android:id="@+id/capture_live_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:background="#00000000"
        android:src="@drawable/capture_live_filter_30dp"/>

</RelativeLayout>
