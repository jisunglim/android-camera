<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <io.jaylim.study.myapplication.capture.ResizableTextureView
        android:id="@+id/capture_texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <io.jaylim.study.myapplication.StackBar
        android:id="@+id/capture_stack_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        custom:maximumTime="15"
        custom:backgroundColor="#7fd7dadb"
        custom:stackColor="#FFFFFF"
        custom:dividerColor="#E8474E"
        custom:barHeight="15dp"
        custom:trashBin="@drawable/camera_trashbin_button_center_30dp"/>


    <ImageButton
        android:id="@+id/capture_take_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="#00000000"
        android:src="@drawable/camera_shoot_button_release_70dp"
        android:contentDescription="@string/capture_take_picture_button_desc"/>

    <ImageButton
        android:id="@+id/capture_music_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:background="#00000000"
        android:src="@drawable/camera_music_select_button_40dp"
        android:contentDescription="@string/capture_music_button_desc"/>

    <ImageButton
        android:id="@+id/capture_library_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:background="#00000000"
        android:src="@drawable/camera_library_button_40dp"
        android:contentDescription="@string/capture_library_button_desc"/>

    <View
        android:id="@+id/capture_base_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:background="#35FFFFFF"/>

    <ImageButton
        android:id="@+id/capture_selfie_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/capture_base_line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:src="@drawable/camera_selfie_mode_button_30dp"
        android:contentDescription="@string/capture_selfie_mode_button_desc"/>

    <ImageButton
        android:id="@+id/capture_music_cut_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/capture_base_line"
        android:layout_toStartOf="@id/capture_selfie_mode_button"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:src="@drawable/camera_music_cut_button_30dp"
        android:contentDescription="@string/capture_selfie_mode_button_desc"/>

    <ImageButton
        android:id="@+id/capture_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/capture_base_line"
        android:layout_toEndOf="@id/capture_selfie_mode_button"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:src="@drawable/camera_ok_button_active_30dp"
        android:contentDescription="@string/capture_selfie_mode_button_desc"/>

</RelativeLayout>
